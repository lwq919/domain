{
  "name": "cfdomain",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "bundle-analyzer": "npm run build:analyze && npx vite-bundle-analyzer dist",
    "clean": "rm -rf dist node_modules/.vite",
    "prebuild": "npm run clean",
    "performance": "npm run build:prod && npx lighthouse dist/index.html --output=json --output-path=./lighthouse-report.json",
    "audit": "npm audit && npm run type-check && npm run lint",
    "optimize": "npm run clean && npm run build:prod && npm run bundle-analyzer"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@hono/node-server": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.0",
    "terser": "^5.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-compression": "^0.5.0",
    "vite-plugin-pwa": "^0.17.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
